<Calendar.Root value={value} onValueChange={setValue} className={styles.Root}>
  <Calendar.YearsGrid cellsPerRow={3} className={styles.YearsGrid}>
    {({ years }) =>
      years.map((year) => (
        <Calendar.YearsCell
          value={year}
          className={styles.YearsCell}
          key={year.toString()}
        />
      ))
    }
  </Calendar.YearsGrid>
</Calendar.Root>